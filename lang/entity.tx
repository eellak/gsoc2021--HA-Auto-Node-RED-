import broker

//TODO: Model mqtt topics?
Entity:
    'entity:'
        (
        'name:' name=ID
        'topic:' topic=STRING
        'broker:' broker=[Broker]
        'attributes:'
                attributes*=Attribute
        )#
;

Attribute:
    NumericAttribute | BoolAttribute | StringAttribute
;

NumericAttribute:
    IntAttribute | FloatAttribute
;

IntAttribute:
    '-' name=ID ':' 'int'
;

FloatAttribute:
    '-' name=ID ':' 'float'
;

StringAttribute:
    '-' name=ID ':' 'string'
;

BoolAttribute:
    '-' name=ID ':' 'bool'
;